<div
  class="
    d-flex justify-content-center
    align-items-center vh-100
  "
>
  <div class="col-md-12 text-center">
    <h1>{{section.settings.titel}}</h1>

    <p>
        {{ section.settings.subtitle_title }}
    </p>
    {% if section.settings.button_url == blank %}
      {% assign shop_url = shop.secure_url %}
    {% else %}
      {% assign shop_url = section.settings.button_url %}
    {% endif %}

    <a class="btn btn-primary" href="{{ shop_url }}" role="button">{{section.settings.button_text }}</a>
  </div>
</div>

{% schema %}

{
    "name": "Template 404",
    "settings": [
        {
        "type": "text",
         "id": "titel",
         "default":"404",
         "label": "404 Heading Title"
        },
        {
        "type": "text",
        "id": "subtitle_title",
        "default" : "The page that you're looking for is not found",
        "label": "404 Subtext Title"
        },
        {
          "type": "text",
          "id": "button_text",
          "default" : "Go to Home Page",
          "label": "Back to Home Button Text"
          },
        {
          "type": "url",
          "id": "button_url",
          "label": "Button URL"
        }
    ]

}

{% endschema %}